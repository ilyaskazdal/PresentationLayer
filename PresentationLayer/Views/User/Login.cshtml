@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<br>
<br />
<br>
<br />

<div class="row">
    <div class="col-12">
        <h1> Login </h1>
        <br></br>
        <div asp-validation-summary="All" class="text-danger"></div>
        <form asp-controller="User" asp-action="Login" method="post" novalidate>
            <div class="mb-3">
                <label asp-for="UserNickName" class="form-label"></label>
                <input asp-for="UserNickName" class="form-control">
                <span asp-validation-for="UserNickName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control">
                <span asp-validation-for="Password" class="text-danger"></span>

            </div>
            <button type="submit" class="btn btn-primary">Login</button>

        </form>
    </div>



</div>

