@model DataAccessLayer.Entities.ProductPost

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

    <h4>Product</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ProductPostId" />
                <div class="form-group">
                    <label asp-for="ProductPostId" class="control-label"></label>
                    <input asp-for="ProductPostId" class="form-control" />
                    <span asp-validation-for="ProductPostId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProductPostName" class="control-label"></label>
                    <input asp-for="ProductPostName" class="form-control" />
                    <span asp-validation-for="ProductPostName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProductPostDesccription" class="control-label"></label>
                    <input asp-for="ProductPostDesccription" class="form-control" />
                    <span asp-validation-for="ProductPostDesccription" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Categories" class="control-label"></label>
                    <select asp-for="Categories" class="form-control" asp-items="ViewBag.CategoryId"></select>
                    <span asp-validation-for="Categories" class="text-danger"></span>
                </div>
              
               
                <div class="form-group">
                    <label asp-for="StillOnSale" class="control-label"></label>
                    <input asp-for="StillOnSale" class="form-control" />
                    <span asp-validation-for="StillOnSale" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
