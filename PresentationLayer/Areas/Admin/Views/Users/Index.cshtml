@model IEnumerable<DataAccessLayer.Entities.User>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Users</title>
</head>
<body>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.UserId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserNickName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserSurname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserDescription)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserEmail)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Password)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CheckedByAdmin)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserCreatedDate)
                </th>
                
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserId)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.UserNickName)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>

                     <td>
                        @Html.DisplayFor(modelItem => item.UserSurname)
                    </td>

                     <td>
                        @Html.DisplayFor(modelItem => item.UserDescription)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.UserEmail)
                    </td>

                     <td>
                        @Html.DisplayFor(modelItem => item.Password)
                    </td>

                     <td>
                        @Html.DisplayFor(modelItem => item.CheckedByAdmin)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.UserCreatedDate)
                    </td>






                    <td>
                        <a asp-action="Edit" asp-route-id="@item.UserId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.UserId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.UserId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
